<form method="post" action="/players/<%= @player.id %>">
  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  value="<%= @player.first_name %>"
  /><br>

  <label for="second-name-field">Second Name:</label>
  <input
  type="text"
  name="second_name"
  id="second-name-field"
  value="<%= @player.second_name %>"
  /><br>

  <label for="team-selection">Select a team:</label>
  <select name="club_id" id="team-selection">
    <% for club in @clubs %>
    <option value="<%= club.id %>" <%="selected" if @player.club_id == club.id %>><%= club.club_name %></option>
    <% end %>
  </select><br>

  <label for="age">Age:</label>
  <input 
  type="number"
  name="age"
  id="age"
  value="<%= @player.age %>"
  /><br>

  <label for="position_field">Position:</label>
  <input 
  type="text"
  name="position"
  id="position_field"
  value="<%= @player.position %>"
  /><br>

  <label for="fit">Fit?: Fit</label>
  <input 
  type="radio"
  name="fit"
  id="fit"
  value='t'
  />Not Fit
  <input 
  type="radio"
  name="fit"
  id="fit"
  value='f'
  /> <br>

  <label for="nation_field">Place of Birth:</label>
  <input 
  type="text"
  name="nation"
  id="nation_field"
  value="<%= @player.nation %>"
  /><br>

  <label for="photo_url_field">Photo:</label>
  <input
  type="text"
  name="photo_url"
  id="photo_url_field"
  value="<%= @player.photo_url  %>"
  /><br>



  <input class="btn" type='submit' value="Submit">
</form>